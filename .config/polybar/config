; Original autho: Seth Traman

[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/main]
top = true
width = 100%
height = 36
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
padding-right = 2
module-margin-left = 2
module-margin-right = 2

font-0 = "Hack:pixelsize=10:antialias=true;1"
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=10;1"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=10;1"
font-3 = "Font Awesome 5 Brands:pixelsize=10;1"

modules-left = bspwm xwindow
modules-center = date
modules-right = pulseaudio ethernet wireless storage memory cpu temperature battery

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

label-focused = %name%
label-focused-underline = ${colors.primary}
label-focused-padding = 2

label-urgent = 
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:64:...%

[module/date]
type = internal/date
interval = 1.0

date = %d-%m%
time = " %H:%M:%S"
format-prefix = 

label = %time% / %date%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = " %percentage%%"
label-muted = " "

[module/ethernet]
type = internal/network
interface = enp0s31f6

format-connected = <label-connected>
label-connected = 

; Don't show an icon when ethernet is disconnected
format-disconnected = 

[module/wireless]
type = internal/network
interface = wlp0s20f3
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = " %essid%"

format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.alert}
label-disconnected = xx.xx.xx.xx

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

[module/storage]
type = internal/fs

mount-0 = /
interval = 10

format-mounted = <label-mounted>
label-mounted = " %free%"

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage%%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 80
base-temperature = 30

format = <ramp> <label>
format-underline = #00000000
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-background = ${colors.alert}
label-warn-padding = 2

ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC

time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <label-full>

label-charging = %percentage%% @ %consumption% W
label-discharging = %percentage%%/%time%
label-full = " %percentage%%"

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

; Framerate in milliseconds
animation-charging-framerate = 750
